<%- include("../partials/header")%>

<h2 style="margin: 10px;">Register as a Clinic</h2>
<div class="lineshadow"></div>

<h4 style="margin: 15px">Fill all fields to create new account</h4>

<div class="register">
    <form action="/clinics/clinic/register" method="post">
        <div class="form-group form-inline">
            <label for="name">Clinic's name: </label>
            <input type="text" id="name" name="name" placeholder="Clinic's Name" required="required" />
        </div>
        <div class="form-group form-inline">
            <label for="name">Email: </label>
            <input type="email" name="email" placeholder="Email" required="required" />
        </div>
        <div class="form-group form-inline">
            <label for="name">Phone number: </label>
            <input type="tel" name="phone" placeholder="Phone" pattern="[0-9]{3}[0-9]{3}[0-9]{3}" required>
        </div>
        <div class="form-group form-inline">
            <label for="name">Zip-code: </label>
            <input type="text" name="zipcode" placeholder="Zip-code" pattern="[0-9]{2}-[0-9]{3}" required="required" />
        </div>
        <div class="form-group form-inline">
            <label for="name">City: </label>
            <input type="text" name="city" placeholder="City" required="required" />
        </div>
        <div class="form-group form-inline">
            <label for="name">Street: </label>
            <input type="text" name="street" placeholder="Street" required="required" />
        </div>
        <div class="form-group form-inline">
            <label for="name">Open hour: </label>
            <input type="time" name="openhour" placeholder="Opening hour" required="required" />
        </div>
        <div class="form-group form-inline">
            <label for="name">Close hour: </label>
            <input type="time" name="endhour" placeholder="Ending hour" required="required" />
        </div>
        <div class="form-group form-inline">
            <label for="name">Password: </label>
            <input type="password" name="password" placeholder="Password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
                title="Must contain at least one  number and one uppercase and lowercase letter, and at least 8 or more characters"
                required="required" />
        </div>
        <div class="form-group form-inline">
            <label for="name">Repeat password: </label>
            <input type="password" name="password2" placeholder="Repeat password" required="required" />
        </div>
        <button type="submit" class="btn btn-primary btn-large">Let me in.</button>
    </form>
</div>
<%- include("../partials/footer")%>
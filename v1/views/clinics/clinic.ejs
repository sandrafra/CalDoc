<%- include("../partials/header")%>
<div class="container">
    <h1>My profile</h1>
    <div class="row">
        <div class="col-4">
            <nav class="nav flex-column">
                <a class="nav-link active" href="/clinics/clinic">Personal Settings</a>
                <a class="nav-link" href="/clinics/clinic/password">Delete Account</a>
            </nav>
        </div>
        <div class="col-6">
            <form action="/clinics/clinic/<%=clinic.id%>" method="POST">
                <input type="text" name="name" placeholder="Clinic's Name" required="required"
                    value="<%=clinic.name%>" />
                <input type="email" name="email" placeholder="Email" required="required" value="<%=clinic.email%>" />
                <input type="tel" name="phone" placeholder="Phone" pattern="[0-9]{3}[0-9]{3}[0-9]{3}" required
                    value="<%=clinic.phone%>">
                <input type="text" name="zipcode" placeholder="Zip-code" pattern="[0-9]{2}-[0-9]{3}" required="required"
                    value="<%=clinic.zipcode%>" />
                <input type="text" name="city" placeholder="City" required="required" value="<%=clinic.city%>" />
                <input type="text" name="street" placeholder="Street" required="required" value="<%=clinic.street%>" />
                <button type="submit" class="btn btn-primary btn-large">Save</button>
            </form>
        </div>
    </div>
</div>


<%- include("../partials/footer")%>
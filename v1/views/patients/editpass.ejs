<%- include("../partials/header")%>
<div class="container">
    <h1>My profile</h1>
    <div class="row">
        <div class="col-4">
            <nav class="nav flex-column">
                <a class="nav-link active" href="/patients/patient">Personal Settings</a>
                <a class="nav-link" href="/patients/patient/password">Delete Account</a>
            </nav>
        </div>
        <div class="col-6">
            <form action="/patients/patient/<%=patient.id%>/password" method="POST">
                <input type="password" name="currentpassword" placeholder=" Current Password" required="required"/>
                <input type="password" name="password" placeholder="Password" required="required"/>
                <input type="password" name="password2" placeholder="Repate password" required="required"/>
                <button type="submit" class="btn btn-primary btn-large">Change password</button>
            </form>
        </div>
    </div>
</div>



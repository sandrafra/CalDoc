<%- include("../partials/header")%>
<div class="container">
    <h1>
        
    </h1>
    <div class="row">
        <div class="col-2">
            <nav class="nav flex-column">
                <a class="nav-link active" href="/patients/patient/appointment">My calendar</a>
                <a class="nav-link" href="/patients/patient/appointment/<%=currentUserID%>/new"">New Appointment</a>
                <a class="nav-link" href="/patients/patient/appointment/<%=currentUserID%>/past"">Past Appointment</a>
                <a class="nav-link" href="/patients/patient/appointment/<%=currentUserID%>/next"">Next Appointment</a>
             </nav>
        </div>
        <div class="col-10">
            <%if(nextevents.length == 0){%>
                <h4>You do not have next appointments</h4>
            <%}%>
            <%nextevents.forEach(function(event){%>
                <div class="col-10">
                    <div class="thumbnail">
                        <h6>Clinic: <%=event.clinname%></h6>
                        <h6>Adress <%=event.city%></h6>
                        <h6><%=event.street%></h6>
                        <h6>Doctor: <%=event.docname%> <%=event.surname%></h6>
                        <h6>Specizalization: <%=event.specialization%></h6>
                        <h6>Date: <%=event.startslot%></h6>
                        <a data-toggle="modal" data-target="#myModal" class="btn btn-danger" >Cancel your appointment</a>
                        <div  id='myModal' class="modal" tabindex="-1" role="dialog">
                            <div class="modal-dialog" role="document">
                              <div class="modal-content">
                                <div class="modal-header">
                                  <h5 class="modal-title">Cancel the appointment</h5>
                                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                  </button>
                                </div>
                                <div class="modal-body">
                                  <p>Your appointment will be cancel. Are you sure?</p>
                                </div>
                                <div class="modal-footer">
                                  <a type="button" href="/patients/patient/appointment/<%=event.id%>/delete" class="btn btn-primary">Yes</a>
                                  <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                                </div>
                              </div>
                            </div>
                          </div>
                    </div>
                </div>
        <%})%>
        </div>
    </div>
</div>

<%- include("./partials/header")%>
<div class="m-2">
<h3>View doctors avaliable on the DocCal</h3>
</div>
<div class="lineshadow mb-3"></div>
<div class="container">
    <div class="row text-center">
        <% doctors.forEach(function(doctor){ %>
        <div class="col-md-4 col-sm-4 col-xs-12 animated fadeInDown">
            <div class="well profile_view">
                <div class="col-sm-12">
                    <div class="left col-xs-7 mb-2">
                        <h2><%= doctor.name%> <%=doctor.surname%></h2>
                        <ul class="list-unstyled">
                            <li><strong> Specialization:</strong> <%= doctor.specialization%></li>
                        </ul>
                        <p>Contact: </p>
                        <p><strong><i class="fas fa-at"></i> Email: </strong> <%= doctor.email%></p>
                    </div>
                </div>
                <div class="col-xs-12 bottom text-center mt-2">
                    <div class="col-xs-12 col-sm-6 m-auto">
                        <form action="/<%=doctor.id%>/clinics" method="POST">
                            <button class="btn btn-primary">
                                <i class="fas fa-hospital-symbol"></i> View clinics
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <%}) %>
    </div>
</div>
<%- include("./partials/footer")%>